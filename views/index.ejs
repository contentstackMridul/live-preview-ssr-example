<%- include('./partials/head.ejs') %>

    <!-- Contentstack live preview SDK -->
    <script src="https://unpkg.com/@contentstack/live-preview-utils@1.3.2/dist/index.js"></script>

    <link rel="stylesheet" href="https://unpkg.com/@contentstack/live-preview-utils/dist/main.css" />
    <!-- Contentstack live preview SDK -->

    </head>

    <body>
        <!-- Navbar -->
        <nav>
            <div class="logo">
                <a href="">
                    <img src="https://www.contentstack.com/static/logos/nav-header/cs-1.svg">
                </a>
            </div>
            <div class="nav-links">
                <div class="primary-links">
                    <a class="item" href="#">Products</a>
                    <a class="item" href="#">Pricing</a>
                    <a class="item" href="#">Benefits</a>
                    <a class="item" href="#">About us</a>
                    <a class="item" href="#">Blog</a>
                    <a class="item" href="#">Clients</a>
                </div>
                <div class="secondary-links">
                    <div>
                        <i class="fas fa-bars"></i>
                        <a class="btn-trial hoverfill" href="#">Plan a live demo</a>
                    </div>
                    <a class="item" href="#">Log In</a>
                </div>
            </div>
        </nav>

        <!-- Landing header -->

        <div class="hide-overflow">
            <div id="hero-page">
                <img id="rayas" src="https://image.ibb.co/mQzLfx/rayas.png">
                <header class="section">
                    <div class="content">
                        <!-- Getting the content from contentstack sdk  -->
                        <h1 class="title" <%=dataCslp.title %>><%= title %>
                        </h1>
                        <p class="paragraph" <%=dataCslp.single_line %>><%= singleLine %>
                        </p>

                        <div class="hero-btn-container">
                            <div class="btn-demo">
                                <a class="wobble hoverfill"
                                    href="https://github.com/contentstack/live-preview-sdk/blob/main/docs/live-preview-configs.md"
                                    target="_blank">SDK Docs</a>
                            </div>
                            <div class="btn-demo">
                                <a class="wobble hoverfill"
                                    href="https://www.contentstack.com/docs/developers/set-up-live-preview/set-up-live-preview-for-your-website/"
                                    target="_blank">Set Up Live Preview</a>
                            </div>
                        </div>
                    </div>
                </header>
                <div id="circulo-div">
                    <img id="circulo" src="https://preview.ibb.co/cRdD0x/circulo2.png">
                </div>
            </div>

            <!-- Page 2 -->
            <%- include('./partials/sub-hero-page.ejs') %>
        </div> 

        <script>
            // Initializing the Contentstack live preview sdk 
            // check https://github.com/contentstack/live-preview-sdk/blob/main/docs/live-preview-configs.md to know more about config
            ContentstackLivePreview.init({
                cleanCslpOnProduction: true,
                enable: true,
                stackDetails: {
                    apiKey: '<%= process.env.CONTENTSTACK_API_KEY %>',
                    environment: '<%= process.env.CONTENTSTACK_ENVIRONMENT %>'
                },
                clientUrlParams: {
                    host: "app.contentstack.com",
                },
                editButton: {
                    enable: true,
                    exclude: ["outsideLivePreviewPortal"],
                    includeByQueryParameter: false,
                    position: 'top-center',
                }
            });
        </script>

    </body>

    </html>